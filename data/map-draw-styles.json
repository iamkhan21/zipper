[
  {
    "id": "gl-draw-line",
    "type": "line",
    "filter": ["all", ["==", "$type", "LineString"], ["!=", "mode", "static"]],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "#026401",
      "line-width": 3
    }
  },
  {
    "id": "gl-draw-polygon-stroke",
    "type": "line",
    "filter": ["all", ["==", "$type", "Polygon"], ["!=", "mode", "static"]],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": "#026401",
      "line-width": 3
    }
  },
  {
    "id": "gl-draw-polygon-fill",
    "type": "fill",
    "filter": ["all", ["==", "$type", "Polygon"], ["!=", "mode", "static"]],
    "paint": {
      "fill-color": "#026401",
      "fill-opacity": 0.25
    }
  },
  {
    "id": "gl-draw-polygon-midpoint-halo",
    "type": "circle",
    "filter": ["all", ["==", "$type", "Point"], ["==", "meta", "midpoint"]],
    "paint": {
      "circle-radius": 6,
      "circle-color": "#026401"
    }
  },
  {
    "id": "gl-draw-polygon-midpoint",
    "type": "circle",
    "filter": ["all", ["==", "$type", "Point"], ["==", "meta", "midpoint"]],
    "paint": {
      "circle-radius": 3,
      "circle-color": "#fff"
    }
  },
  {
    "id": "gl-draw-polygon-and-line-vertex-halo",
    "type": "circle",
    "filter": [
      "all",
      ["==", "meta", "vertex"],
      ["==", "$type", "Point"],
      ["!=", "mode", "static"]
    ],
    "paint": {
      "circle-radius": 6,
      "circle-color": "#026401"
    }
  },
  {
    "id": "gl-draw-polygon-and-line-vertex-halo-active",
    "type": "circle",
    "filter": [
      "all",
      ["==", "meta", "vertex"],
      ["==", "$type", "Point"],
      ["==", "active", "true"],
      ["!=", "mode", "static"]
    ],
    "paint": {
      "circle-radius": 8,
      "circle-color": "#a30b0b"
    }
  },
  {
    "id": "gl-draw-polygon-and-line-vertex",
    "type": "circle",
    "filter": [
      "all",
      ["==", "meta", "vertex"],
      ["==", "$type", "Point"],
      ["!=", "mode", "static"]
    ],
    "paint": {
      "circle-radius": 3,
      "circle-color": "#fff"
    }
  }
]
